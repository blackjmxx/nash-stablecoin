extends index.pug

block content
    h2 Buy Bond
    p
        | Buy active bonds from market

    form(method='POST' action='/bond')
        div.form-group
            label(for='id') Bond ID:
            input.form-control(type='text', placeholder='bond ID' name='id')
        div.form-group
            label(for='passphrase') Passphrase
            input.form-control(type='text', placeholder='passphrase' name='passphrase')
        button.btn.btn-success(type='submit') Buy
    
    br 

    h2 Active Bonds
    pre
      table.table.table-striped
        thead
            tr
              th(scope='col') ID
              th(scope='col') Balance
              th(scope='col') Asset

        tbody
            each account in accounts
             tr
                td= account.address
                td= account.balance
                td= JSON.stringify(account.asset, null, 2)
