extends index.pug

block content
    h2 Transfer
    p
        | Transfer Nash or LSK

    form(method='POST' action='/transfer')
    
        div.form-group
            label(for='address') Address:
            input.form-control(type='text', placeholder='address' name='address')
        div.form-group
            label(for='amount') Amount:
            input.form-control(type='text', placeholder='10' name='amount')
 
        div.form-group
            label(for='passphrase') Passphrase:
            input.form-control(type='text', placeholder='passphrase' name='passphrase')

        div.form-group
            label(for='type') Type:
                |  
                select#type-select(name='type')
                    option(value='lisk') Lisk
                    option(value='nash') Nash

        button.btn.btn-danger(type='submit') Send
    
    br 